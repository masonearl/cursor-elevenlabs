{
  "name": "cursor-elevenlabs-voice",
  "displayName": "Cursor ElevenLabs Voice Assistant",
  "description": "Bidirectional voice conversation for building code in Cursor using ElevenLabs",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorVoice.openVoiceInput",
        "title": "Cursor Voice: Open Voice Input",
        "icon": "$(mic)"
      },
      {
        "command": "cursorVoice.testTTS",
        "title": "Cursor Voice: Test Text-to-Speech",
        "icon": "$(play)"
      },
      {
        "command": "cursorVoice.speakSelection",
        "title": "Cursor Voice: Speak Selected Text",
        "icon": "$(unmute)"
      },
      {
        "command": "cursorVoice.speakClipboard",
        "title": "Cursor Voice: Speak Clipboard",
        "icon": "$(clippy)"
      },
      {
        "command": "cursorVoice.stop",
        "title": "Cursor Voice: Stop Speaking",
        "icon": "$(mute)"
      },
      {
        "command": "cursorVoice.typeAndSpeak",
        "title": "Cursor Voice: Type and Speak",
        "icon": "$(comment)"
      }
    ],
    "menus": {
      "commandPalette": [
        { "command": "cursorVoice.openVoiceInput" },
        { "command": "cursorVoice.testTTS" },
        { "command": "cursorVoice.speakSelection" },
        { "command": "cursorVoice.speakClipboard" },
        { "command": "cursorVoice.stop" },
        { "command": "cursorVoice.typeAndSpeak" }
      ]
    },
    "configuration": {
      "title": "Cursor ElevenLabs Voice",
      "properties": {
        "cursorVoice.elevenlabsApiKey": {
          "type": "string",
          "default": "",
          "description": "Your ElevenLabs API key",
          "secret": true
        },
        "cursorVoice.macosVoice": {
          "type": "string",
          "default": "",
          "description": "macOS voice name (e.g., 'Alex', 'Samantha', 'Victoria'). Leave empty for system default."
        },
        "cursorVoice.useElevenLabs": {
          "type": "boolean",
          "default": false,
          "description": "Use ElevenLabs TTS instead of macOS built-in (requires API key)"
        },
        "cursorVoice.voiceId": {
          "type": "string",
          "default": "",
          "description": "ElevenLabs voice ID (only used if useElevenLabs is true)"
        },
        "cursorVoice.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start voice conversation on startup"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {}
}
